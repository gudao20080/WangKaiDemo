<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/myAnim</item>
    </style>

    <style name="myAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/abc_slide_in_bottom</item>
        <item name="android:activityOpenExitAnimation">@anim/abc_slide_out_top</item>
        <item name="android:activityCloseEnterAnimation">@anim/abc_fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/abc_fade_out</item>

    </style>



</resources>



